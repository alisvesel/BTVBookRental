@model IEnumerable<BTVBookRental.Models.UserAccount>
@{
    ViewData["Title"] = "Home Page";
}

<div class="row">
    <div class="col-md-12">
        <h2>Utilizatori inregistrati:</h2>
        @if(Model.Any())
        {
            <table class="table">
                <tr>
                    <th>Prenume</th>
                    <th>Nume</th>
                    <th>Nume Utilizator</th>
                    <th>Email</th>
                </tr>
                @foreach(var item in Model)
                {
                <tr>
                    <td>@item.FirstName</td>
                    <td>@item.LastName</td>
                    <td>@item.Username</td>
                    <td>@item.Email</td>
                </tr>
                }
            </table>
        }
        else
        {
            <p>Nu avem nici un utilizator intregistrat.</p>
        }
    </div>
</div>